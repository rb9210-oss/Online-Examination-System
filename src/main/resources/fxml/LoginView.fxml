<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.onlineexam.controller.LoginController">
   <center>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);">
         <children>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Online Examination System" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Text>
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Please login to continue" textAlignment="CENTER">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Text>
               </children>
            </VBox>
            
            <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10; -fx-padding: 30;">
               <children>
                  <TextField fx:id="usernameField" promptText="Username" style="-fx-background-radius: 5; -fx-padding: 10;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  
                  <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-radius: 5; -fx-padding: 10;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </PasswordField>
                  
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" text="Login" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" text="Register" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  
                  <Label fx:id="statusLabel" textFill="WHITE" textAlignment="CENTER">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
