<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.onlineexam.controller.StudentDashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Student Dashboard">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="welcomeLabel" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" text="Logout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="30.0" style="-fx-background-color: #ecf0f1; -fx-padding: 40;">
         <children>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome to Online Examination System" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Text>
                  <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Choose an option to continue" textAlignment="CENTER">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Text>
               </children>
            </VBox>
            
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                     <children>
                        <Text fill="#27ae60" strokeType="OUTSIDE" strokeWidth="0.0" text="ðŸ“" textAlignment="CENTER">
                           <font>
                              <Font size="48.0" />
                           </font>
                        </Text>
                        <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Take Exam" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Text>
                        <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Start a new examination" textAlignment="CENTER">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Text>
                        <Button fx:id="takeExamButton" mnemonicParsing="false" onAction="#handleTakeExam" text="Take Exam" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
                  
                  <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                     <children>
                        <Text fill="#3498db" strokeType="OUTSIDE" strokeWidth="0.0" text="ðŸ“Š" textAlignment="CENTER">
                           <font>
                              <Font size="48.0" />
                           </font>
                        </Text>
                        <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="View Results" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Text>
                        <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Check your exam results" textAlignment="CENTER">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Text>
                        <Button fx:id="viewResultsButton" mnemonicParsing="false" onAction="#handleViewResults" text="View Results" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <children>
                  <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Recent Results" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Text>
                  <TableView fx:id="resultsTable" prefHeight="150.0" style="-fx-background-color: transparent;">
                     <columns>
                        <TableColumn fx:id="examDateColumn" prefWidth="120.0" text="Exam Date" />
                        <TableColumn fx:id="scoreColumn" prefWidth="80.0" text="Score" />
                        <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                        <TableColumn fx:id="timeTakenColumn" prefWidth="100.0" text="Time Taken" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
