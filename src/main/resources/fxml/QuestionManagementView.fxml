<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.onlineexam.controller.QuestionManagementController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Question Management">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Text>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.6" style="-fx-background-color: #ecf0f1;">
         <items>
            <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding: 20;">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Questions List">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="addQuestionButton" mnemonicParsing="false" onAction="#handleAddQuestion" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5;">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  
                  <TableView fx:id="questionsTable" prefHeight="400.0">
                     <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="questionColumn" prefWidth="300.0" text="Question" />
                        <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="Category" />
                        <TableColumn fx:id="difficultyColumn" prefWidth="80.0" text="Difficulty" />
                        <TableColumn fx:id="actionsColumn" prefWidth="120.0" text="Actions" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
            
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20;">
               <children>
                  <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Question Details">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Text>
                  
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Question Text:" />
                        <TextArea fx:id="questionTextArea" prefHeight="80.0" promptText="Enter the question text here..." />
                        
                        <Label text="Category:" />
                        <TextField fx:id="categoryField" promptText="e.g., Java, Math, Science" />
                        
                        <Label text="Difficulty Level:" />
                        <ComboBox fx:id="difficultyComboBox" prefWidth="150.0" />
                     </children>
                  </VBox>
                  
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Options:" />
                        <TextField fx:id="optionAField" promptText="Option A" />
                        <TextField fx:id="optionBField" promptText="Option B" />
                        <TextField fx:id="optionCField" promptText="Option C" />
                        <TextField fx:id="optionDField" promptText="Option D" />
                        
                        <Label text="Correct Answer:" />
                        <ComboBox fx:id="correctAnswerComboBox" prefWidth="150.0" />
                     </children>
                  </VBox>
                  
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="updateButton" mnemonicParsing="false" onAction="#handleUpdate" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 5;">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClear" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  
                  <Label fx:id="statusLabel" textFill="#e74c3c" textAlignment="CENTER">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </center>
</BorderPane>
