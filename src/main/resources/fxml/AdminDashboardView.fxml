<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.onlineexam.controller.AdminDashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Admin Dashboard">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Text>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="welcomeLabel" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="30.0" style="-fx-background-color: #ecf0f1; -fx-padding: 40;">
         <children>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Administration Panel" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Text>
                  <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Manage questions and view system statistics" textAlignment="CENTER">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Text>
               </children>
            </VBox>
            
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                     <children>
                        <Text fill="#e74c3c" strokeType="OUTSIDE" strokeWidth="0.0" text="❓" textAlignment="CENTER">
                           <font>
                              <Font size="48.0" />
                           </font>
                        </Text>
                        <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Manage Questions" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Text>
                        <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Add, edit, or delete exam questions" textAlignment="CENTER">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Text>
                        <Button fx:id="manageQuestionsButton" mnemonicParsing="false" onAction="#handleManageQuestions" text="Manage Questions" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
                  
                  <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                     <children>
                        <Text fill="#3498db" strokeType="OUTSIDE" strokeWidth="0.0" text="📊" textAlignment="CENTER">
                           <font>
                              <Font size="48.0" />
                           </font>
                        </Text>
                        <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="View Results" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Text>
                        <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="View all student exam results" textAlignment="CENTER">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Text>
                        <Button fx:id="viewResultsButton" mnemonicParsing="false" onAction="#handleViewResults" text="View Results" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
                  
                  <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                     <children>
                        <Text fill="#27ae60" strokeType="OUTSIDE" strokeWidth="0.0" text="👥" textAlignment="CENTER">
                           <font>
                              <Font size="48.0" />
                           </font>
                        </Text>
                        <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Manage Users" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Text>
                        <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="View and manage student accounts" textAlignment="CENTER">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Text>
                        <Button fx:id="manageUsersButton" mnemonicParsing="false" onAction="#handleManageUsers" text="Manage Users" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
               <children>
                  <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="System Statistics" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Text>
                  <HBox alignment="CENTER" spacing="40.0">
                     <children>
                        <VBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Label fx:id="totalQuestionsLabel" textFill="#2c3e50" textAlignment="CENTER">
                                 <font>
                                    <Font name="System Bold" size="24.0" />
                                 </font>
                              </Label>
                              <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Total Questions" textAlignment="CENTER">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Text>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Text fx:id="totalStudentsLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER">
                                 <font>
                                    <Font name="System Bold" size="24.0" />
                                 </font>
                              </Text>
                              <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Total Students" textAlignment="CENTER">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Text>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Text fx:id="totalExamsLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER">
                                 <font>
                                    <Font name="System Bold" size="24.0" />
                                 </font>
                              </Text>
                              <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Total Exams" textAlignment="CENTER">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Text>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Text fx:id="averageScoreLabel" fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER">
                                 <font>
                                    <Font name="System Bold" size="24.0" />
                                 </font>
                              </Text>
                              <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Average Score" textAlignment="CENTER">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Text>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
